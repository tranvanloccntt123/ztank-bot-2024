{
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist"
    },
    "include": ["*.ts"],
    "exclude": ["node_modules"],
    "ts-node": {
      "esm": true,
      "compilerOptions": {
        "module": "nodenext"
      }
    }
  }
  